<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/ikon_budget_tambah"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/icn_belanja"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nama_budget_tambah"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/ikon_budget_tambah"
            android:layout_toRightOf="@+id/ikon_budget_tambah"
            android:layout_marginLeft="10dp"
            android:hint="Nama Kategori"
            android:text="Belanja Bulanan"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nominal_budget_tambah"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="70dp"
            android:hint=""
            android:text="600.000"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>