<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kuliah.komsi.moneys_dinamis">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_moneys2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_moneys2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivityEditBudget"
            android:parentActivityName="com.kuliah.komsi.moneys_dinamis.FragmentHalamanBudget"></activity>
        <activity
            android:name=".ActivityHasilScan"
            android:parentActivityName=".ActivityScan" />
        <activity
            android:name=".ActivityPilihKategoriBudget"
            android:parentActivityName=".ActivityTambahBudget" />
        <activity
            android:name=".ActivityTambahBudget"
            android:parentActivityName=".ActivityTambahBudget" />
        <activity
            android:name=".ActivityEditTransaksi"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ActivityPilihKategori"
            android:parentActivityName=".ActivityTambahTransaksi" />
        <activity
            android:name=".ActivityScan"
            android:parentActivityName=".ActivityTambahTransaksi" />
        <activity
            android:name=".ActivityTambahTransaksi"
            android:parentActivityName=".FragmentHalamanTransaksi" />
        <activity android:name=".ActivitySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>